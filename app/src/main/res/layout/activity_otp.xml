<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#15A4B6"
    tools:context=".OTP">


    <TextView
        android:id="@+id/otp1"
        android:layout_width="393dp"
        android:layout_height="78dp"
        android:layout_marginTop="108dp"
        android:fontFamily="sans-serif-black"
        android:text="Verification Code"
        android:textColor="#E5ECED"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/otp2"
        android:layout_width="387dp"
        android:layout_height="88dp"
        android:layout_marginStart="12dp"
        android:text="We will send you a ONE TIME PASSWORD on your registered aadhar card mobile n0. "
        android:textColor="#E1EFF1"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otp1"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/otpbutton"
        android:layout_width="266dp"
        android:layout_height="64dp"
        android:text="Verify"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.589" />

    <EditText
        android:id="@+id/otpet"
        android:layout_width="293dp"
        android:layout_height="85dp"
        android:ems="10"
        android:inputType="phone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.436" />
</androidx.constraintlayout.widget.ConstraintLayout>